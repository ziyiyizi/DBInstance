@model WebApplication3.Models.RePassword

@{
    Layout = "~/Views/Member/MainPage.cshtml";
}
<h2 class="sub-header">更改密码</h2>
<hr class="" />

<div class="table-responsive">
   
        @using (Html.BeginForm("SetPassWord", "Member", FormMethod.Post, new { id = "searchForm" }))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-6" style="text-align:center">

        @Html.ValidationSummary(true)

        <div class="form-group">

            <div class="col-md-6">
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control col-md-offset-12", @style = "width:262px;", @placeholder = "旧密码" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger col-md-offset-5" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control col-md-offset-12", @style = "width:262px", @placeholder = "新密码" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger col-md-offset-5" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-6">
                @Html.EditorFor(model => model.ConfirmPassword, "确认", new { htmlAttributes = new { @class = "form-control col-md-offset-12", @style = "width:262px", @placeholder = "确认密码" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger col-md-offset-5" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <input style="width:262px" type="submit" value="确认" class="btn btn-primary  col-md-offset-12" />
            </div>
        </div>

    </div>
        }
    </div>

